generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  createadAt   DateTime      @default(now())
  email        String        @unique
  password     String
  limitedSites LimitedSite[]
}

model LimitedSite {
  id      String  @id @default(cuid())
  url     String
  maxTime Int
  userId  String?
  user    User?   @relation(fields: [userId], references: [id])
}
